{
  "name": "mineserve",
  "version": "1.2.0",
  "description": "Premium Minecraft Server Manager",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "cross-env VITE_DEV_SERVER_URL=http://localhost:3000 wait-on http://localhost:3000 && tsc -p electron -w & electron .",
    "build": "rimraf release && vite build && tsc -p electron && electron-builder",
    "preview": "vite preview"
  },
  "keywords": [],
  "author": "Antigravity",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/MikAmaral123/MineServe.git"
  },
  "build": {
    "appId": "com.mineserve.app",
    "productName": "MineServe",
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "MikAmaral123",
        "repo": "MineServe"
      }
    ],
    "files": [
      "dist/**/*",
      "dist/electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    }
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^25.0.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.0.0",
    "vite": "^7.3.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "electron-updater": "^6.7.3",
    "framer-motion": "^11.0.0",
    "i18next": "^25.7.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.378.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.3",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^2.3.0"
  }
}